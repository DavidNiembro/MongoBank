<% include layout %>

<body id="page-top">

  <!-- Page Wrapper -->
  <div id="wrapper">

    <% include parts/sidebar%>

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
      <div id="content">

        <!-- Topbar -->
        <% include parts/menu%>

        <!-- End of Topbar -->

        <div class="container-fluid">

          <!-- Area Chart -->
          <div class="card border-0 shadow mb-4">
            <table class="table table-striped">
                <tr>
                  <th scope="col">De</th>
                  <th scope="col">Compte</th>
                  <th scope="col">Date</th>
                  <th scope="col">Montant</th>
                </tr>
                <% compte.transactions.forEach(function(transaction) { %>
                  <tr>
                      <td><%= transaction.from.user %></td>
                      <td><%= transaction.from.compte %></td>
                      <td><%= moment(transaction.createdAt).format('D MMMM YYYY H:mm') %></td>
                      <td><%= transaction.amount %> CHF</td>
                  </tr>
                <% }); %>
                <tr>
            </table>
          </div>

        <!-- /.container-fluid -->

      </div>
      
      <!-- End of Main Content -->

      <!-- Footer -->
      <footer class="sticky-footer bg-white">
        <div class="container my-auto">
          <div class="copyright text-center my-auto">
            <span>Copyright &copy; MongoBank 2019</span>
          </div>
        </div>
      </footer>
      <!-- End of Footer -->

    </div>
    <!-- End of Content Wrapper -->

  </div>
  <!-- End of Page Wrapper -->

  <!-- Scroll to Top Button-->
  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>

  <!-- Logout Modal-->
  <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Prêt à quitter ?</h5>
          <button class="close" type="button" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">×</span>
          </button>
        </div>
        <div class="modal-body">Cliquez sur "Se déconnecter" si vous êtes prêt à laisser cette session</div>
        <div class="modal-footer">
          <button class="btn btn-secondary" type="button" data-dismiss="modal">Annuler</button>
          <form method="POST" action="/logout">
            <button type="submit" class="btn btn-primary">Se déconnecter</button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap core JavaScript-->
  <script src="jquery.js"></script>
  <script src="bootstrap.js"></script>

  <!-- Core plugin JavaScript-->
  <script src="jquery.easing.js"></script>

  <!-- Custom scripts for all pages-->
  <script src="sb-admin-2.js"></script>

  <!-- Page level plugins -->
  <script src="Chart.js"></script>

  <!-- Page level custom scripts -->
  <script src="chart-area-demo.js"></script>

</body>

</html>
